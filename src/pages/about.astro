---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Capybara Studios - Calm Automation',
    }}
  >
    <Fragment slot="title">
      Bridging the Gap to <br />
      <span class="text-accent dark:text-white highlight">Intelligent Automation & AI</span>
    </Fragment>

    <Fragment slot="subtitle">
      We empower small and medium businesses with practical, ROI-focused automation and AI systems. Experience calm
      growth and sustainable value, without the complexity.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact & Expertise"
    stats={[
      { title: 'Projects Delivered', amount: '50+' },
      { title: 'Happy Clients', amount: '95%' },
      { title: 'Hours Saved for Clients Annually', amount: '1000s' },
      { title: 'Combined Experience', amount: '10+ Years' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Approach to Automation & AI"
    subtitle="We believe in building systems that bring calm, clarity, and compounding value to your business. Here's what guides us:"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Calm Over Chaos',
        description:
          'Automation should simplify, not complicate. We design intuitive systems that reduce stress and free you to focus on what matters most.',
        icon: 'tabler:mood-smile',
      },
      {
        title: 'Practical & Purposeful',
        description:
          'We deliver solutions that work, tailored to your specific business needs and goals, ensuring a clear return on investment.',
        icon: 'tabler:target-arrow',
      },
      {
        title: 'Transparent Partnership',
        description:
          'Open collaboration is key. We explain how your systems work and empower you with knowledge, acting as your trusted guide.',
        icon: 'tabler:users-group',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Unlock Efficiency with Our Core Automation Services"
    subtitle="From streamlining daily tasks to deploying sophisticated AI, we help your business thrive. Discover how we can transform your operations:"
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'AI-Powered SEO & Content',
        description:
          'Automate keyword research, content creation, image generation, publishing, and social sharing for a powerful online presence.',
        icon: 'tabler:robot-face',
      },
      {
        title: 'Smart Marketing Automation',
        description:
          'Engage your audience with automated social media, email campaigns, lead capture, and dynamic content pipelines.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Custom Business Systems (MCP)',
        description:
          'We audit your processes and build flexible AI + API driven automations to remove bottlenecks in operations, sales, and admin.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'Sales & CRM Integration',
        description:
          'Automate lead nurturing, qualification, and follow-ups. Sync seamlessly with your CRM, including AI voice chatbot integrations.',
        icon: 'tabler:report-money',
      },
      {
        title: 'Holistic Support for Non-Technical Teams',
        description:
          'We guide you from ideation to full rollout, explaining tools, setting up systems, and ensuring you understand every step.',
        icon: 'tabler:school',
      },
      {
        title: 'Long-Term Value & Partnership',
        description:
          'We focus on ROI-first, human-first solutions, building systems for sustainable growth and offering ongoing support.',
        icon: 'tabler:anchor',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Capybara Studios Automation Services',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Guiding Values"
    subtitle="These principles are the foundation of every project we undertake and every relationship we build. They ensure we deliver automation that truly serves your business."
    items={[
      {
        title: 'Slow Business, Lasting Impact',
        description:
          'We build long-term systems for sustainable growth, not quick fixes. Like the capybara, we value steady progress and enduring results.',
      },
      {
        title: 'Trust & Empowerment',
        description:
          'Our goal is to earn your trust by making technology accessible. We empower you to feel confident and in control of your automation.',
      },
      {
        title: 'ROI-First, Human-First',
        description:
          "Every solution must deliver clear, compounding value while respecting your team's well-being and your business's integrity.",
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Proven Results & Client Success"
    subtitle="We are dedicated to delivering tangible results and fostering long-term partnerships. Our clients achieve remarkable efficiency and growth through our tailored automation solutions."
    isReversed={true}
    callToAction={{
      text: 'View Our Work',
      href: '/portfolio',
    }}
    items={[
      {
        title: 'Transformative Process Automation',
        description:
          "We've helped businesses automate critical tasks, saving hundreds of hours and freeing up teams for strategic work.",
        icon: 'tabler:arrows-transfer-up',
      },
      {
        title: 'Enhanced Client Engagement',
        description:
          'Our solutions, like AI-powered chatbots and automated communication, improve responsiveness and client satisfaction.',
        icon: 'tabler:message-chatbot',
      },
      {
        title: 'Sustainable Growth Systems',
        description:
          'From AI-driven SEO to streamlined sales funnels, we build systems that support scalable and long-lasting business growth.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Serving Businesses Worldwide"
    tagline="Global Mindset, Local Impact"
    columns={2}
    items={[
      {
        title: 'Remote-First Collaboration',
        description:
          'We operate as a distributed team, allowing us to work with clients globally and tap into diverse talent.',
        icon: 'tabler:world-latitude',
      },
      {
        title: 'Accessible Expertise',
        description:
          'No matter your location, our automation and AI expertise is available to help your business thrive.',
        icon: 'tabler:map-pin-share',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Ready to Explore Automation for Your Business?"
    tagline="Let's Talk"
    columns={2}
    items={[
      {
        title: 'Schedule a Consultation',
        description:
          'Discuss your challenges and ideas with us. We offer a no-obligation chat to explore how automation and AI can benefit you.',
        icon: 'tabler:calendar-plus',
      },
      {
        title: 'Get Your Questions Answered',
        description:
          "Have specific questions? We're here to provide clear, jargon-free answers and guide you on your next steps.",
        icon: 'tabler:message-question',
      },
    ]}
  />
</Layout>
