---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Capybara Studios — Automation Systems for Small & Medium Businesses',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: "Let's Talk",
        href: '#contact',
        icon: 'tabler:message-circle',
      },
      { text: 'Our services', href: '#services' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Capybara Studios Hero Image' }}
  >
    <Fragment slot="title">
      Automation Systems for <span class="hidden xl:inline">Small & Medium</span>
      <span class="text-accent dark:text-white highlight"> Businesses</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Automation and AI systems that free up your time and expand your reach.</span></span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Automation. AI. Growth.</span>
      We build custom systems that automate your marketing, sales, and operations—no technical expertise required.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note>
    <Fragment slot="content"
      >MAREK & CAPYBARA STUDIOS HELP BUSINESSES AUTOMATE THEIR WORKFLOWS WITH POWERFUL AI & AUTOMATION SYSTEMS</Fragment
    >
  </Note>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="What We Do"
    title="Systems We Build For You"
    subtitle="We create custom automation solutions that handle repetitive tasks, freeing you to focus on growth."
    items={[
      {
        title: 'Lead Generation Systems',
        description: 'Automated prospecting, outreach sequences, and lead nurturing that keep your pipeline full.',
        icon: 'tabler:users',
      },
      {
        title: 'Sales Process Automation',
        description: 'Quote generation, proposal creation, follow-ups, and CRM updates that happen automatically.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Marketing Systems',
        description: 'Content creation, scheduling, and distribution across platforms without daily manual effort.',
        icon: 'tabler:brand-facebook',
      },
      {
        title: 'Operations Streamlining',
        description:
          'Automated reports, approval flows, client onboarding, and internal processes that save hours daily.',
        icon: 'tabler:settings',
      },
      {
        title: 'AI-Powered Tools',
        description: 'Custom AI agents that handle customer service, content creation, data analysis, and more.',
        icon: 'tabler:robot',
      },
      {
        title: 'Integration Solutions',
        description:
          'Connected systems where your tools talk to each other, eliminating data entry and manual transfers.',
        icon: 'tabler:arrow-autofit-width',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Focus"
    title="System Examples"
    items={[
      {
        title: 'Outreach Automation',
        description:
          'Custom email sequences that find leads, make initial contact, and nurture relationships—all on autopilot.',
      },
      {
        title: 'Content Generation',
        description:
          'AI-powered content systems that create, optimize, and distribute blog posts, social media, and emails.',
      },
      {
        title: 'Data Pipeline Automation',
        description:
          'Automated collection, processing, and reporting of your business data for better decision-making.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Automation Solution Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Client Onboarding</h3>
      Automated forms, document collection, welcome sequences, and training that ensure a smooth onboarding experience.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Save 10-30+ Hours Weekly',
        description: 'Automate repetitive tasks that eat up your valuable time.',
      },
      {
        title: 'Scale Without Hiring',
        description: 'Grow your operations without proportionally increasing headcount.',
      },
      {
        title: 'Never Drop Opportunities',
        description: 'Reliable follow-up and nurturing that happens with perfect consistency.',
      },
      {
        title: 'Reduce Human Error',
        description: 'Eliminate mistakes in data entry, follow-ups, and routine processes.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Results Image',
    }}
  >
    <Fragment slot="content">What Our Systems Deliver</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="Our Service Packages"
    subtitle="Flexible options designed to meet your business needs at any scale"
    tagline="Pricing"
    items={[
      {
        title: 'Automation Starter',
        description: 'Perfect for small businesses looking to automate their first core process',
        icon: 'flat-color-icons:template',
        callToAction: {
          text: 'Starting at $1,000/mo',
          href: '#contact',
        },
        features: [
          'One custom automation system',
          'Implementation & training',
          'Monthly maintenance & updates',
          'Email support',
          'Tools & platform fees included',
          'Additional systems: $750 each',
        ],
      },
      {
        title: 'Business Accelerator',
        description: 'Ideal for businesses ready to automate multiple processes',
        icon: 'flat-color-icons:gallery',
        callToAction: {
          text: 'Starting at $2,500/mo',
          href: '#contact',
        },
        features: [
          'Three custom automation systems',
          'Implementation & training',
          'Weekly check-ins',
          'Priority email & chat support',
          'Tools & platform fees included',
          'Additional systems: $500 each',
        ],
      },
      {
        title: 'Enterprise Partner',
        description: 'For businesses wanting complete workflow automation',
        icon: 'flat-color-icons:approval',
        callToAction: {
          text: 'Starting at $4,900/mo',
          href: '#contact',
        },
        features: [
          'Unlimited automation systems',
          'Implementation & training',
          'Weekly strategy meetings',
          'Dedicated Slack channel',
          'Tools & platform fees included',
          'Senior automation engineer',
        ],
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How We Work"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery</span>',
        description: 'We analyze your current workflows to identify bottlenecks and automation opportunities.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Design</span>',
        description: 'We create a custom automation plan aligned with your business goals and budget.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Step 3: <span class="font-medium">Build</span>',
        description: 'We develop your automation systems using n8n, Make, or custom solutions.',
        icon: 'tabler:code',
      },
      {
        title: 'Step 4: <span class="font-medium">Launch & Optimize</span>',
        description: 'We implement your systems, train your team, and continuously improve performance.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'How it works image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about our automation services and approach"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What tools do you use to build automation systems?',
        description:
          'We primarily use n8n, Make (formerly Integromat), Zapier, and custom solutions depending on your specific needs. We select the right tool for each job to ensure optimal performance and scalability.',
      },
      {
        title: 'Do I need to understand how the automation works?',
        description:
          "Not at all. We handle all the technical details and provide simple dashboards and interfaces for you to monitor and control your systems. We also provide thorough training so you understand what the system does, even if you don't need to know how it works.",
      },
      {
        title: 'How long does it take to implement an automation system?',
        description:
          'Most systems can be implemented within 2-4 weeks, depending on complexity. Simple automations might take just a few days, while more complex enterprise solutions could take 6-8 weeks for full implementation.',
      },
      {
        title: 'What happens if the automation breaks or needs updates?',
        description:
          "All our service plans include ongoing maintenance and support. If something breaks, we fix it promptly. As your business evolves, we'll update your systems to accommodate your changing needs.",
      },
      {
        title: 'Can you integrate with my existing tools and software?',
        description:
          "Yes! We specialize in connecting different platforms and tools. We work with most major business software and can often develop custom connections for specialized tools. During our discovery process, we'll assess your current tech stack and ensure compatibility.",
      },
      {
        title: 'How soon will I see results from automation?',
        description:
          'Most clients begin seeing time savings immediately after implementation. More complex benefits like increased sales or improved customer retention typically become apparent within 1-3 months as the automated processes generate data and outcomes.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Automation Tools', amount: '10+' },
      { title: 'Integration Capabilities', amount: '500+' },
      { title: 'Development Experience', amount: '20+ years' },
      { title: 'Guaranteed Support Response', amount: '24h' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Schedule Free Consultation',
        href: '#contact',
        icon: 'tabler:calendar',
      },
    ]}
    id="contact"
  >
    <Fragment slot="title">
      Ready to <span class="text-accent">Automate</span> Your <br class="block sm:hidden" /><span
        class="sm:whitespace-nowrap">Business Growth?</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      Let's discuss how automation can transform your specific business operations.
      <br /><br />
      <span class="text-sm"
        >Not quite ready? Watch practical automation examples on our <a
          href="https://www.youtube.com/@automatyzacjaai"
          class="text-primary hover:underline">YouTube channel</a
        > or email us at <a href="mailto:contact@capybarastudios.com" class="text-primary hover:underline"
          >contact@capybarastudios.com</a
        ></span
      >
    </Fragment>
  </CallToAction>
</Layout>
